    // जब कोई इनपुट या टेक्स्टएरिया फोकस होगा, कीबोर्ड दिखेगा
    document.querySelectorAll("input, textarea").forEach(input => {
        input.addEventListener("focus", function () {
            activeInput = this;
            keyboard.classList.remove("hidden"); // कीबोर्ड दिखाएं
        });
    });

    // कीबोर्ड के किसी भी अक्षर को क्लिक करने पर इनपुट में टाइप होगा
    document.querySelectorAll(".key").forEach(key => {
        key.addEventListener("click", function () {
            if (activeInput) {
                activeInput.value += this.innerText;
            }
        });
    });

    // बैकस्पेस फंक्शन
    function backspace() {
        if (activeInput) {
            activeInput.value = activeInput.value.slice(0, -1);
        }
    }

    // जब यूज़र कहीं और क्लिक करे, तो कीबोर्ड छिपाएं
    document.addEventListener("click", function (event) {
        if (!event.target.closest(".keyboard") && !event.target.closest("input, textarea")) {
            keyboard.classList.add("hidden");
        }
    });
</script>


    <script>
        // Get the input field and table
        var input = document.getElementById("searchInput");
        var table = document.getElementById("dataTable");

        // Add event listener for keyup event on the input field
        input.addEventListener("keyup", function() {
            // Get the filter value (user input)
            var filter = input.value.toUpperCase();
            
            // Get the rows of the table
            var rows = table.getElementsByTagName("tr");

            // Loop through all table rows, and hide those that don't match the search query
            for (var i = 1; i < rows.length; i++) { // Start from 1 to skip the header row
                var fullNameCell = rows[i].getElementsByTagName("td")[2]; // Get the cell containing the full name
                if (fullNameCell) {
                    var fullName = fullNameCell.textContent || fullNameCell.innerText; // Get the full name text
                    if (fullName.toUpperCase().indexOf(filter) > -1) { // Check if the full name matches the filter
                        rows[i].style.display = "";
                    } else {
                        rows[i].style.display = "none";
                    }
                }
            }
        });
    </script>
    <script>
        // Add an event listener for keypress
        document.addEventListener('keydown', function(event) {
            // Check if the pressed key is "D" (case-insensitive)
            if (event.key.toLowerCase() === 'd') {
                // Scroll the page down by 100% of the viewport height
                window.scrollBy({
                    top: 1000*100,
                    behavior: 'smooth' // Smooth scrolling
                });
            }
        });
    </script>
